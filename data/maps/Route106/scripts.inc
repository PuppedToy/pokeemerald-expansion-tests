	multichoice 0, 0, MULTI_ROUTE106_PICK, FALSE
	switch VAR_RESULT
	case 0, Route106_EventScript_PickBrickBreak
	case 1, Route106_EventScript_PickShadowBall
	case 2, Route106_EventScript_PickPsychic
	end

